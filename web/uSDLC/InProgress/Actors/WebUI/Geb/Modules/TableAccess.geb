class PeoplePage extends ThisPage {
	static content = {
		row { index ->
			module PeopleTableRow, $("table#actors tr", index + 1) // to skip header row
		}
	}
}
class PeopleTableRow extends geb.Module {
	static content = {
		cell { $("td", it) }
		firstName { cell(0).text() }
		lastName { cell(1).text() }
	}
}
browse PeoplePage
assert row(0).firstName == "Bruce"
assert row(1).lastName == "Wayne"
