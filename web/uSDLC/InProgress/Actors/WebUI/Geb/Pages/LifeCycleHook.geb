class LifeCyclePage1 extends ThisPage {
	static previousPage, nextPage

	static onLoad(geb.Page previousPage) {
		this.previousPage = previousPage
	}

	def onUnload(geb.Page nextPage) {
		this.nextPage = nextPage
	}
}
class LifeCyclePage2 extends LifeCyclePage1 {}

browse LifeCyclePage1
browse LifeCyclePage2
assert previousPage instanceof LifeCyclePage1
assert nextPage instanceof LifeCyclePage2
